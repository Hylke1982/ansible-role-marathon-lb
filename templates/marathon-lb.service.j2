[Unit]
Description=Marathon-LB service
After=network.target network-online.target marathon.service
Wants=network-online.target

[Service]
WorkingDirectory={{marathonlb_home}}/app
ExecStart=/bin/bash -c "docker run -e PORTS={{marathonlb_ports}} --dns=127.0.0.1 --net=host mesosphere/marathon-lb sse --group \"*\""
Type=simple

[Install]
WantedBy=multi-user.target
